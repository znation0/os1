Q1)
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

void make_toks(char *s, char *tok[]) {
    int i = 0;
    char *p = strtok(s, " \n");
    while (p != NULL) {
        tok[i++] = p;
        p = strtok(NULL, " \n");
    }
    tok[i] = NULL;
}

void typeline_all(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    char line[500];
    while (fgets(line, sizeof(line), fp) != NULL) {
        printf("%s", line);
    }
    fclose(fp);
}

int main() {
    char cmd[200], *args[10];
    pid_t pid;

    while (1) {
        printf("myshell$ ");
        fgets(cmd, sizeof(cmd), stdin);
        make_toks(cmd, args);

        if (args[0] == NULL) continue;
        if (strcmp(args[0], "exit") == 0) break;

        if (strcmp(args[0], "typeline") == 0) {
            if (args[1] == NULL || args[2] == NULL) {
                printf("Usage: typeline -a filename\n");
            } else if (strcmp(args[1], "-a") == 0) {
                typeline_all(args[2]);
            } else {
                printf("Invalid option. Only -a supported.\n");
            }
            continue;
        }

        pid = fork();
        if (pid == 0) {
            execvp(args[0], args);
            printf("Command not found.\n");
            exit(0);
        } else {
            wait(NULL);
        }
    }
    return 0;
}


Q2)
#include <stdio.h>

int main() {
    int n, i, j, time = 0, tq, done = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int at[n], bt[n], rt[n], wt[n], tat[n];
    int completed[n];
    for(i = 0; i < n; i++) completed[i] = 0;

    printf("Enter arrival times: ");
    for(i = 0; i < n; i++) scanf("%d", &at[i]);

    printf("Enter burst times: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    printf("\nGantt Chart:\n");

    while(done < n) {
        int flag = 0;
        for(i = 0; i < n; i++) {
            if(rt[i] > 0 && at[i] <= time) {
                if(rt[i] <= tq) {
                    printf("| P%d (%d-%d) ", i+1, time, time+rt[i]);
                    time += rt[i];
                    rt[i] = 0;
                    tat[i] = time - at[i];
                    wt[i] = tat[i] - bt[i];
                    completed[i] = 1;
                    done++;
                } else {
                    printf("| P%d (%d-%d) ", i+1, time, time+tq);
                    time += tq;
                    rt[i] -= tq;
                }
                flag = 1;
            }
        }
        if(flag == 0) time++;
    }
    printf("|\n");

    double total_wt = 0, total_tat = 0;
    printf("\nProcess\tAT\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n", i+1, at[i], bt[i], wt[i], tat[i]);
        total_wt += wt[i];
        total_tat += tat[i];
    }

    printf("\nAverage Waiting Time: %.2f\n", total_wt/n);
    printf("Average Turnaround Time: %.2f\n", total_tat/n);

    return 0;
}
