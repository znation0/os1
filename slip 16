Q1)
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <ctype.h>

void make_toks(char *s, char *tok[]) {
    int i = 0;
    char *p = strtok(s, " \n");
    while(p != NULL) {
        tok[i++] = p;
        p = strtok(NULL, " \n");
    }
    tok[i] = NULL;
}

void count_chars(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    int count = 0;
    char ch;
    while ((ch = fgetc(fp)) != EOF) count++;
    printf("Number of characters: %d\n", count);
    fclose(fp);
}

void count_words(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    int count = 0;
    char word[200];
    while (fscanf(fp, "%s", word) != EOF) count++;
    printf("Number of words: %d\n", count);
    fclose(fp);
}

int main() {
    char cmd[200], *args[10];
    pid_t pid;

    while (1) {
        printf("myshell$ ");
        fgets(cmd, sizeof(cmd), stdin);
        make_toks(cmd, args);

        if (args[0] == NULL) continue;
        if (strcmp(args[0], "exit") == 0) break;

        if (strcmp(args[0], "count") == 0) {
            if (args[1] == NULL || args[2] == NULL) {
                printf("Usage: count c/w filename\n");
            } else if (strcmp(args[1], "c") == 0) {
                count_chars(args[2]);
            } else if (strcmp(args[1], "w") == 0) {
                count_words(args[2]);
            } else {
                printf("Invalid option. Use c or w\n");
            }
            continue;
        }

        pid = fork();
        if (pid == 0) {
            execvp(args[0], args);
            printf("Command not found.\n");
            exit(0);
        } else {
            wait(NULL);
        }
    }
    return 0;
}


Q2)
#include <stdio.h>

int main() {
    int n, i, time = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int at[n], bt[n], priority[n], wt[n], tat[n], ct[n], flag[n];
    for(i = 0; i < n; i++) flag[i] = 0;

    printf("Enter arrival times: ");
    for(i = 0; i < n; i++) scanf("%d", &at[i]);

    printf("Enter burst times: ");
    for(i = 0; i < n; i++) scanf("%d", &bt[i]);

    printf("Enter priority (lower number = higher priority): ");
    for(i = 0; i < n; i++) scanf("%d", &priority[i]);

    printf("\nGantt Chart:\n");

    while(completed < n) {
        int idx = -1;
        int highest_priority = 100000; 
        for(i = 0; i < n; i++) {
            if(flag[i]==0 && at[i] <= time && priority[i] < highest_priority) {
                highest_priority = priority[i];
                idx = i;
            }
        }

        if(idx == -1) {
            time++;
            continue;
        }

        printf("| P%d (%d-%d) ", idx+1, time, time+bt[idx]);
        time += bt[idx];
        ct[idx] = time;
        tat[idx] = ct[idx] - at[idx];
        wt[idx] = tat[idx] - bt[idx];
        flag[idx] = 1;
        completed++;
    }
    printf("|\n");

    double total_wt = 0;
    printf("\nProcess\tAT\tBT\tPriority\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t\t%d\t%d\n", i+1, at[i], bt[i], priority[i], wt[i], tat[i]);
        total_wt += wt[i];
    }

    printf("\nAverage Waiting Time: %.2f\n", total_wt/n);

    return 0;
}

