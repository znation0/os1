Q1)
#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid;

    pid = fork();

    if (pid < 0) {
        printf("Fork failed.\n");
        return 1;
    } 
    else if (pid == 0) {
        printf("I am Child Process\n");
        printf("Child Process ID: %d\n", getpid());
    } 
    else {
        printf("I am Parent Process\n");
        printf("Parent Process ID: %d\n", getpid());
    }

    return 0;
}


Q2)
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

typedef struct {
    int pid, at, bt, pr, rt, ct, tat, wt;
} Process;

int main() {
    int n, i, time = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    Process p[n];
    printf("Enter arrival time, burst time, priority (lower number = higher priority):\n");
    for(i = 0; i < n; i++) {
        p[i].pid = i+1;
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].pr);
        p[i].rt = p[i].bt;
        p[i].ct = 0; p[i].tat = 0; p[i].wt = 0;
    }

    srand(time(0));
    int io_wait = 2;
    printf("\nGantt Chart:\n");

    while(completed < n) {
        int idx = -1, highest_pr = 100000;
        for(i = 0; i < n; i++) {
            if(p[i].rt > 0 && p[i].at <= time && p[i].pr < highest_pr) {
                highest_pr = p[i].pr;
                idx = i;
            }
        }

        if(idx == -1) {
            time++;
            continue;
        }

        printf("| P%d (%d-%d) ", p[idx].pid, time, time+1);
        p[idx].rt -= 1;
        time++;

        if(p[idx].rt == 0) {
            p[idx].ct = time;
            completed++;
        }

        // Simulate IO waiting randomly
        if(rand() % 3 == 0 && p[idx].rt > 0) {
            time += io_wait;
        }
    }
    printf("|\n");

    double total_wt = 0, total_tat = 0;
    printf("\nProcess\tAT\tBT\tPriority\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;
        printf("P%d\t%d\t%d\t%d\t\t%d\t%d\n", p[i].pid, p[i].at, p[i].bt, p[i].pr, p[i].wt, p[i].tat);
        total_wt += p[i].wt;
        total_tat += p[i].tat;
    }

    printf("\nAverage Waiting Time: %.2f\n", total_wt/n);
    printf("Average Turnaround Time: %.2f\n", total_tat/n);

    return 0;
}
