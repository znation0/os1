Q1)
#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, ref_len, i, j, k;
    printf("Enter number of frames: ");
    scanf("%d", &n);

    int frames[n];
    int counter[n];
    for (i = 0; i < n; i++) {
        frames[i] = -1;
        counter[i] = 0;
    }

    int reference[] = {3,5,7,2,5,1,2,3,1,3,5,3,1,6,2};
    ref_len = sizeof(reference)/sizeof(reference[0]);

    int page_faults = 0, time = 0;

    printf("\nPage\tFrames\n");
    for (i = 0; i < ref_len; i++) {
        int page = reference[i], found = 0;
        time++;

        for (j = 0; j < n; j++) {
            if (frames[j] == page) {
                counter[j] = time;
                found = 1;
                break;
            }
        }

        if (!found) {
            page_faults++;

            int empty_index = -1;
            for (j = 0; j < n; j++) {
                if (frames[j] == -1) {
                    empty_index = j;
                    break;
                }
            }

            if (empty_index != -1) {
                frames[empty_index] = page;
                counter[empty_index] = time;
            } else {
                int lru_index = 0;
                int min_time = counter[0];
                for (j = 1; j < n; j++) {
                    if (counter[j] < min_time) {
                        min_time = counter[j];
                        lru_index = j;
                    }
                }
                frames[lru_index] = page;
                counter[lru_index] = time;
            }
        }

        printf("%d\t", page);
        for (j = 0; j < n; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults: %d\n", page_faults);
    return 0;
}

Q2)
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

void make_toks(char *s, char *tok[]) {
    int i = 0;
    char *p = strtok(s, " \n");
    while (p != NULL) {
        tok[i++] = p;
        p = strtok(NULL, " \n");
    }
    tok[i] = NULL;
}

void count_chars(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    int c, count = 0;
    while ((c = fgetc(fp)) != EOF)
        count++;
    printf("Number of characters: %d\n", count);
    fclose(fp);
}

void count_words(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    char word[200];
    int count = 0;
    while (fscanf(fp, "%s", word) != EOF)
        count++;
    printf("Number of words: %d\n", count);
    fclose(fp);
}

void count_lines(char *filename) {
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("File not found: %s\n", filename);
        return;
    }
    char line[200];
    int count = 0;
    while (fgets(line, sizeof(line), fp) != NULL)
        count++;
    printf("Number of lines: %d\n", count);
    fclose(fp);
}

int main() {
    char cmd[100], *args[10];
    pid_t pid;

    while (1) {
        printf("myshell$ ");
        fgets(cmd, sizeof(cmd), stdin);
        make_toks(cmd, args);

        if (args[0] == NULL) continue;
        if (strcmp(args[0], "exit") == 0) break;

        if (strcmp(args[0], "count") == 0) {
            if (args[1] == NULL || args[2] == NULL)
                printf("Usage: count c/w/l filename\n");
            else if (strcmp(args[1], "c") == 0)
                count_chars(args[2]);
            else if (strcmp(args[1], "w") == 0)
                count_words(args[2]);
            else if (strcmp(args[1], "l") == 0)
                count_lines(args[2]);
            else
                printf("Invalid option. Use c/w/l\n");
            continue;
        }

        pid = fork();
        if (pid == 0) {
            execvp(args[0], args);
            printf("Command not found.\n");
            exit(0);
        } else {
            wait(NULL);
        }
    }
    return 0;
}
